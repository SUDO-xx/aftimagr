<%- form_tag do -%>
  <p>Insert this image into your document.</p>
  <table id="show_form_fields" class="aftimagr_form" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <td class="label"><%= label_tag :alt, 'Alt text:' %></td>
      <td class="field"><%= text_field_tag :alt, image.alt, :size => 40 %></td>
    </tr>
    <tr>
      <td class="label">URL:</td>
      <td class="field">
        <%= text_field_tag :url, nil, :size => 40 %>
        <div class="example">Example: http://www.google.com/</div>
      </td>
    </tr>
  </table>
<%- end -%>